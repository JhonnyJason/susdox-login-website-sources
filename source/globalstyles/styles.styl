// globalstyles styles
/*==========================================================
Fonts
==========================================================*/

@font-face {
    font-family: 'Acari Sans';
    src: url('font/AcariSans-Regular.woff2') format('woff2'),
        url('font/AcariSans-Regular.woff') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Acari Sans';
    src: url('font/AcariSans-Bold.woff2') format('woff2'),
        url('font/AcariSans-Bold.woff') format('woff');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
}


/*==========================================================
Color Theme
==========================================================*/
cd-foreground = white
cd-flash = #1E3255
cd-background = #3DA299

