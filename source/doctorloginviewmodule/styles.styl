// doctorloginform styles
#doctorloginview
    .dark-support-block
        margin-top 50px

// specifics for doctorloginformblock
#save-login-block
    display flex
    align-items: center
    margin-top 10px

#save-login-input
    width 20px

#doctorlogin-submit-button
    margin-top 10px
    cursor: pointer
    // text-transform: uppercase
// specifics for doctormiscblock
#doctormisc-hint-text
    margin-bottom 20px

#doctormisc-continue-button
    min-width 150px
    // text-transform: uppercase

#no-login-data
    margin-bottom 5px

#get-login-data-button.click-button
    margin-top 50px
    background-color cd-darkblue
    color white
    font-size: 14pt
    padding 15px
    padding-left 30px
    display flex
    align-items: center
    justify-content: space-between
    overflow: hidden
    text-align left
    // width 50%
    // min-width 280px

    #get-login-text
        white-space: nowrap
        overflow: hidden
        text-overflow: ellipsis
        
    #get-login-arrow
        height 35px
        width 35px
        svg
            height 35px
            width 35px


// use larger screens
@media screen and (min-width: 750px)
    #doctorloginview
        .form-section
            display grid
            grid-gap 50px
            grid-template-columns: 6fr 7fr
    