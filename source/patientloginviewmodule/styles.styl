// patientloginform styles
#patientloginview
    .dark-support-block
        margin-top 50px

    .hint
        margin-bottom 15px

    #no-code-question
        font-weight: bold
        margin-bottom 10px
        cursor pointer

#access-compatibility-button
    min-width 150px


#renew-code-form
    #code-renew-svn-block
        display flex
        align-items: center
        #code-renew-svn-part-input 
            width 50px
            box-sizing: border-box
        #code-renew-svn-separator
            width 12px
            box-sizing: border-box
            text-align: center
        #code-renew-birthday-part-input
            width calc(100% - 62px)
            box-sizing: border-box

#code-renew-error-feedback-text
#code-error-feedback-text
    font-weight: bold
    grid-column: 1 / 3
    font-size 8pt
    line-height: 120%

// use larger screens
@media screen and (min-width: 750px)
    #patientloginview
        .form-section
            display grid
            grid-gap 50px
            grid-template-columns: auto auto
