#renew-code-form
    #code-renew-svn-block
        display flex
        align-items: center
        #code-renew-svn-part-input 
            width 50px
            box-sizing: border-box
        #code-renew-svn-separator
            width 12px
            box-sizing: border-box
            text-align: center
        #code-renew-birthday-part-input
            width calc(100% - 62px)
            box-sizing: border-box

#code-renew-error-feedback-text
#code-error-feedback-text
    font-weight: bold
    grid-column: 1 / 3
    font-size 8pt
    line-height: 120%
    color cd-error-red

