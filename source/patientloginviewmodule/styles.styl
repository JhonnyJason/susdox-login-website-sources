// patientloginform styles
#patientloginview
    .dark-support-block
        margin-top 50px

    .hint
        margin-bottom 15px

    #no-code-question
        -webkit-user-select: none; /* Safari */
        -ms-user-select: none; /* IE 10 and IE 11 */
        user-select: none; /* Standard syntax */        
        font-weight: bold
        // margin-bottom 10px
        cursor pointer
        z-index: 3
        position relative

    .grey-extension-block
        background-color transparent
        padding 0

    .grey-extension-block > *
        background-color cd-lightgrey
        padding 20px

    .backshadow-block
        position relative
        z-index 4
    #code-submit-button
        text-transform: uppercase

    .extension-block-content
        position relative
        padding-top 0
        z-index 0
        top -300px
        opacity 0
        transition: all 0.3s 
        
    .extension-block-content.shown
        transform: translateY(300px)
        opacity: 1
    
#idaustriablock
    .backshadow-block 
        display flex
        align-items: center
        flex-direction: column
    
    #idaustria-logo
        width 120px
        height 120px
        border-radius: 50%
        box-shadow: 0 0 5px alpha(#000, 0.2)
        cursor pointer
        object-fit: contain
        object-position: center
        margin-bottom 15px
        transition: transform 0.3s

    #idaustria-logo:hover
        filter: grayscale(100%)

    #idaustria-logo:active
        transform scale(0.9)

