//- patientloginform structure
#patientloginview.fullpage-view

    .pageviewheader

        #patientlogin-heading.pageview-heading
            .back-arrow: svg: use(href="#svg-left-chevron")
            .pageviewheader-logo-block
                .pageviewheader-logo
                h1.pageviewheader-subtitle !{content.headerSubtitle}
            .pageviewheader-language-tags 
                .pageviewheader-de-tag-link !{content.deTagLink} 
                .pageviewheader-en-tag-link !{content.enTagLink}

    .content-section 
        h1.content-title !{content.patientsLoginButtonText}
        p.content-slogan !{sharedContent.contentSloganText}

        .form-section
            include loginformblock.pug
            //- include idaustriablock.pug
            //- include compatibilityblock.pug

        .dark-support-block: include ../supportbuttonmodule/supportbutton.pug
    
    .footer-section: include ../footermodule/footer.pug