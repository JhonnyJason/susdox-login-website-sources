/*==============================================================================
pageview-header styles
==============================================================================*/
.pageviewheader
    padding 20px
    box-sizing: border-box
    color white
    background-color cd-darkblue
    cursor pointer

.pageview-heading
    display grid
    grid-template-columns: auto auto auto
    max-width max-content-width
    margin auto

    .pageviewheader-logo
        height 50px
        width 120px
        margin 0 0 auto 0
        margin-bottom 10px
        background-image: url("img/logo-negative.png")
        background-size: contain
        background-repeat: no-repeat
        background-position center
        
    h1
        font-size: 12pt
        text-align: left
        max-width 320px
        margin auto

    .back-arrow
        align-self: center
        svg
            width 50px
            height 50px

.pageviewheader-language-tags
    display flex
    margin-left auto
    // align-self end

.pageviewheader-language-tags > *
    padding 0 3px
    font-size: 10pt


@media screen and (min-width: 380px)
    .pageview-heading
        .pageviewheader-logo
            width 240px
            margin auto
        h1
            font-size: 14pt
            text-align: right

/*==============================================================================
pageview styles
==============================================================================*/
.fullpage-view
    width 100%
    position absolute
    top 0
    left 0
    background-color white
    background-image url("img/background_3.png")
    background-position right
    background-size contain
    background-repeat: no-repeat
    color: cd-darkblue
    transform: translateX(102vw)
    transition: transform 0.3s
    z-index 3

.here
    transform: translateX(0)
    

.content-section
    max-width max-content-width
    margin auto
    // padding-top content-padding-top
    padding-top 21px
    padding-bottom  content-padding-bottom

    h1
        font-size 28pt
        font-weight bold
        line-height 110%    
    .content-title
        text-align: center
        // margin-bottom 20px
        margin-bottom 7px

    .content-slogan
        text-align: center
        // max-width 400px
        // max-width 660px
        max-width 90%
        margin auto
        margin-bottom 20px

    .form-section
        display grid
        grid-gap 50px
        grid-template-columns: auto
