//- registrationform structure
#patientregistrationview.fullpage-view

    .pageviewheader
        #patientregistrationview-heading.pageview-heading
            .back-arrow: svg: use(href="#svg-left-chevron")
            .pageviewheader-logo-block
                .pageviewheader-logo
                h1.pageviewheader-subtitle !{content.headerSubtitle}
            .pageviewheader-language-tags 
                .pageviewheader-de-tag-link !{content.deTagLink} 
                .pageviewheader-en-tag-link !{content.enTagLink}

    .content-section 
        h1.content-title !{content.patientSupportTitle}
        
        .form-section: include requestcodeformblock.pug
        h2.further-question !{content.patientSupportFurtherQuestionsText}
        p.content-slogan !{content.patientSupportSubText}

        .form-section: include patientregistrationformblock.pug

    .footer-section: include ../footermodule/footer.pug