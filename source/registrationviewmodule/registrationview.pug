//- registrationform structure
#registrationview
    #registrationview-heading
        .back-button.click-button
            .back-arrow: svg: use(href="#svg-left-arrow")
            .heading-text Ärzte Registrierung

    .form-section
        form#registration-form
            label#title-label Titel: 
            input#title-input(type="text")
            
            label#name-label Name*: 
            input#name-input(type="text")
            
            label#surname-label Nachname*: 
            input#surname-input(type="text")

            label#address-label Adresse*: 
            input#address-input(type="text")
            
            label#location-label PLZ Ort*: 
            #location-block
                input#plz-input(type="text")
                input#location-input(type="text")

            label#email-label E-Mail*: 
            input#email-input(type="text")
            
            label#fax-label Fax: 
            input#fax-input(type="text")

            .empty-cell 
            #want-fax-block
                input#want-fax-input(type="checkbox")
                label#want-fax-label Ich bitte um meine Zugangsdaten per Fax!

            label#phone-label Telefon: 
            input#phone-input(type="text")

            .empty-cell 
            #want-call-block
                input#want-call-input(type="checkbox")
                label#want-call-label Ich bitte um einen Rückruf!

            .empty-cell
            button#registration-submit-button() Registrieren

    .agb-hint-block 
        .hint Mit Klick auf REGISTRIEREN akzeptiere ich die <a href="/agb.pdf" target="_blank">AGB</a> und die <a href="/nutzungsbedingungen.pdf" target="_blank">Nutzungsbedingungen</a> der SustSol GmbH!
