header
    padding 20px
    box-sizing: border-box
    color cd-darkblue
    background-color white

    #header-logo
        height 50px
        max-width: 320px
        margin auto
        margin-bottom 10px
        background-image: url("/img/logo-positive.png")
        background-size: contain
        background-repeat: no-repeat
        background-position center
    
    
    h1
        font-size: 14pt
        text-align: right    
        max-width: 320px
        margin auto

#header
    display grid
    grid-template-columns: auto auto auto
    max-width max-content-width
    margin auto

#header-language-tags
    display flex
    margin-left auto
    
#header-language-tags > *
    padding 0 3px
    font-size: 10pt
