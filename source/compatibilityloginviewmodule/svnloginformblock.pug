#svnloginformblock.form-section-block
    .form-block-heading 
        h2#svnlogin-heading-text !{content.svnLoginHeadingText}
    .backshadow-block 
        //- p.hint !{content.svnLoginHintText}

        form#compatibility-svn-login-form 
            label#svn-label(for="svn-part") !{content.svnLoginSVNLabelText}
            #svn-block
                //- input#svn-part-input(name="svn-part" type="number" maxlength="4" placeholder="1234")
                //- #svn-separator -
                //- input#birthday-part-input(name="svn-birthday-part" type="number" maxlength="6" placeholder="020357")
                input#svn-part-input(name="svn-part" type="text" maxlength="4" inputmode="numeric" pattern="/d*" placeholder="1234")
                #svn-separator -
                input#birthday-part-input(name="svn-birthday-part" type="text" maxlength="6" inputmode="numeric" pattern="/d*"  placeholder="020357")
            label#pin-label(for="pin") !{content.svnLoginPinLabelText}
            input#pin-input(type="text" name="pin")
            #svn-error-feedback-text
            .empty-cell
            button#svn-submit-button(type="submit") !{content.svnLoginSubmitButtonText}
            

        .agb-hint-block: p.hint !{content.agbHintText}

