#nosvnloginformblock.form-section-block
    .form-block-heading 
        h2#svnlogin-heading-text !{content.nosvnLoginHeadingText}
    .backshadow-block 
        //- p.hint !{content.nosvnLoginHintText}
        form#compatibility-authcode-login-form
            label#authcode-birthday-label(for="authcode-birthday-input") !{content.nosvnLoginBirthdayLabelText}
            input#authcode-birthday-input(name="birthday" type="date" max="2999-12-31")
            label#authcode-label(for="#authcode-input") !{content.nosvnLoginAuthcodeLabelText}
            #authcode-block
                #authcode-prefix AT-
                input#authcode-input(name="authcode" type="number")
            #authcode-error-feedback-text
            .empty-cell
            button#authcode-submit-button(type="submit") !{content.nosvnLoginSubmitButtonText}
            
        .agb-hint-block: p.hint !{content.agbHintText}

